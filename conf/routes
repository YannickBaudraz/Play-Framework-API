# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Api routes v1
GET        /api/v1/students            v1.StudentController.index
GET        /api/v1/students/:id        v1.StudentController.show(id: Int)
POST       /api/v1/students            v1.StudentController.create
PUT        /api/v1/students/:id        v1.StudentController.update(id: Int)
DELETE     /api/v1/students/:id        v1.StudentController.destroy(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
